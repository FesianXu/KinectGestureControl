<grammar version="1.0" xml:lang="en-US" root="rootRule" tag-format="semantics/1.0-literals" xmlns="http://www.w3.org/2001/06/grammar">
  <rule id="rootRule">
    <one-of>

      <!--#1, master name and authorization-->
      <item>
        <tag>Master</tag>
        <one-of>
          <item> fesian </item>
          <item> fesianxu </item>
        </one-of>
      </item>

      <!--#2, chris, the name of the VA-->
      <item>
        <tag>Chris</tag>
        <one-of>
          <item> Chris </item>
          <item> Christina </item>
          <item> hey, Chris </item>
          <item> hi, Chris </item>
          <item> hello, Chris </item>
        </one-of>
      </item>
      
      <!--#3,request for authorization register-->
      <item>
        <tag>RequestForAuthorization</tag>
        <one-of>
          <item> authorization </item>
          <item> log in </item>
        </one-of>
      </item>

      <!--#4,log out, give up the current authorization-->
      <item>
        <tag>LogOut</tag>
        <one-of>
          <item> log out </item>
        </one-of>
      </item>


      <!--#5,hold on, this command will make chris ignore all master command except the command of "continue"-->
      <item>
        <tag>HoldOn</tag>
        <one-of>
          <item> hold on </item>
          <item> wait </item>
        </one-of>
      </item>


      <!--#6, chris continue to serve you-->
      <item>
        <tag>Continue</tag>
        <one-of>
          <item> continue </item>
          <item> go on </item>
        </one-of>
      </item>

      <!--#7, chris stop the kinect-->
     <item>
        <tag>StopKinect</tag>
        <one-of>
          <item> stop </item>
          <item> stop the kinect </item>
        </one-of>
      </item>

      <!--#8, chris run the kinect-->
      <item>
        <tag>RunKinect</tag>
        <one-of>
          <item> run </item>
          <item> run the kinect </item>
        </one-of>
      </item>



      <!--#9, guest-->
      <item>
        <tag>Guest</tag>
        <one-of>
          <item> guest </item>
          <item> Mike </item>
          <item> Cooper </item>
          <item> John </item>
        </one-of>
      </item>
      
      
      
      
      
      
    </one-of>
  </rule>
</grammar>